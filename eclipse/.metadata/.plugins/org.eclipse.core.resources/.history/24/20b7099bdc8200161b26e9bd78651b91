package com.derf.btawc.items.tools;

import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityLivingBase;
import net.minecraft.entity.item.EntityItem;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemStack;
import net.minecraft.item.ItemSword;

public class ItemSwordOfGreed extends ItemSword {

	private int count;
	private float damage;
	
	public ItemSwordOfGreed(String name, int damage, int count) {
		super(ToolMaterial.EMERALD);
		this.damage = damage;
		this.count = count;
	}
	
	@Override
    public float func_150931_i()
    {
        return damage;
    }

	/*
	@Override
	public boolean hitEntity(ItemStack stack, EntityLivingBase player, EntityLivingBase living) {
		return super.hitEntity(stack, player, living);
	}
	*/
	@Override
	public boolean onLeftClickEntity(ItemStack stack, EntityPlayer player, Entity entity) {
		// TODO Auto-generated method stub
		
		if(entity instanceof EntityLivingBase) {
			EntityLivingBase base = (EntityLivingBase)entity;
			if(base.capturedDrops.size() > 0) {
				for(int i = 0; i < count - 1; i++) {
					player.worldObj.spawnEntityInWorld(base.capturedDrops.get(itemRand.nextInt(base.capturedDrops.size())));
				}
			}
		}
		
		return super.onLeftClickEntity(stack, player, entity);
	}
	
	
}
