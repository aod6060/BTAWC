package com.derf.btawc.items;

import java.util.ArrayList;
import java.util.List;

import com.derf.btawc.util.BlockPos;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public abstract class ItemGrowthDevice extends ItemBasic {
	
	
	protected int size;
	protected int speed;
	
	public ItemGrowthDevice(String name, int size, int speed) {
		super(name);
		this.size = size;
		this.speed = speed;
	}

	@Override
	public boolean onItemUse(
			ItemStack stack, 
			EntityPlayer player, 
			World world, 
			int x,
			int y, 
			int z, 
			int side, 
			float px, 
			float py, 
			float pz) {
		
		boolean b = false;
		
		if(!world.isRemote) {
			BlockPos pos = new BlockPos(x, y, z);
			
			
		}
		
		return b;
	}
	
	private List<BlockPos> getPosition(BlockPos pos) {
		List<BlockPos> list = new ArrayList<BlockPos>();
		
		return list;
	}
}
