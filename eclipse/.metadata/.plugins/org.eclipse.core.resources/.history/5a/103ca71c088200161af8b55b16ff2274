package com.derf.btawc.client;

public class Color {
	// static fields
	private static final float COLOR_R = 1.0f / 255.0f;
	
	private float red;
	private float green;
	private float blue;
	private float alpha;
	
	public Color() {
		this(0.0f, 0.0f, 0.0f);
	}
	
	public Color(float red, float green, float blue) {
		this(red, green, blue, 1.0f);
	}
	
	public Color(float red, float green, float blue, float alpha) {
		this.red = red;
		this.green = green;
		this.blue = blue;
		this.alpha = alpha;
	}
	
	public Color(int red, int green, int blue, int alpha) {	
		this(
				toFloatColor(red),
				toFloatColor(green),
				toFloatColor(blue),
				toFloatColor(alpha)
		);
	}
	
	protected int toIntColor(float f) {
		return (int) (f * 255.0f);
	}
	
	protected float toFloatColor(int i) {
		return i * COLOR_R;
	}
	
}
