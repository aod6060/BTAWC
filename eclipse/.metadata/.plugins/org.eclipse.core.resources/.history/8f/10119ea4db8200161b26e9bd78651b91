package com.derf.btawc.items.tools;

import net.minecraft.entity.EntityLivingBase;
import net.minecraft.item.ItemStack;
import net.minecraft.item.ItemSword;

public class ItemSwordOfGreed extends ItemSword {

	private int count;
	private float damage;
	
	public ItemSwordOfGreed(String name, int damage, int count) {
		super(ToolMaterial.EMERALD);
		this.damage = damage;
		this.count = count;
	}
	
	@Override
    public float func_150931_i()
    {
        return damage;
    }

	@Override
	public boolean hitEntity(ItemStack stack, EntityLivingBase player, EntityLivingBase living) {
		
		return super.hitEntity(stack, player, living);
	}
	
	
}
