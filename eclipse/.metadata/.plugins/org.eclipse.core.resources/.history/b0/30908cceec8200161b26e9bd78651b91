import net.minecraft.item.ItemStack;

public class MobDropUtils {
	
	public class Drops {
		private ItemStack stack;
		private int chance;
		
		public Drops(ItemStack stack, int chance) {
			this.stack = stack;
			this.chance = chance;
		}
		
		public ItemStack getStack() {
			return stack;
		}
		
		public int getChance() {
			return chance;
		}
		
		
	}
	public static Map<Class<? extends Entity>, ItemStack> stacks = new HashMap<Class<? extends Entity>, ItemStack>();
	
	public static ItemStack getDropFromEntity(Entity entity) {
		return stacks.get(entity.getClass());
	}
	
